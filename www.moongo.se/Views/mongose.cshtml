            <button class="dropbtn">
                <i class="fa fa-gamepad" aria-hidden="true"></i>Gaming<i class="fa fa-gamepad" aria-hidden="true"></i>
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
                <a href="/gaming/poe/">Path Of Exile</a>
                <a href="/gaming/uploading/">Build Upload(POE)</a>
                <a href="/gaming/d3/">Diablo 3</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">
                <i class="fa fa-code" aria-hidden="true"></i>Programming<i class="fa fa-code" aria-hidden="true"></i>
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
                <a href="#">Vb.net(Visual Basic)</a>
                <a href="#">C#(C-sharp)</a>
                <a href="#">Web Dev</a>
            </div>
        </div>
    </div>
    <div class="bg centered-item">
        <div class="centered-item white-background pseudo-body">
            <div class="centered-text">
                @RenderBody()
                
                </div>
                </div>
                </div>
                <!--javascripts-->
                <script src="/scripts/slideshow.js"></script>
                <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
                <!--javascripts ends-->
                </body>
